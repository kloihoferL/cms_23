############
### PAGE ###
############
page {
    logo {
        file = EXT:kwm2023/Resources/Public/Images/logo.svg
        fileInverted = EXT:kwm2023/Resources/Public/Images/logo-inverted.svg
        height = 52
        width = 192
        alt = kwm2023
        linktitle = kwm2023
    }
    favicon {
        file = EXT:kwm2023/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:kwm2023/Resources/Private/Layouts/Page/
        partialRootPath = EXT:kwm2023/Resources/Private/Partials/Page/
        templateRootPath = EXT:kwm2023/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:kwm2023/Resources/Private/Layouts/
        partialRootPath = EXT:kwm2023/Resources/Private/Partials/
        templateRootPath = EXT:kwm2023/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:kwm2023/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:kwm2023/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:kwm2023/Resources/Private/Templates/ContentElements/
    }
}


################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {
    primary = #eb3e4a
    secondary = #013859
}


#enable Footer Menue
page.theme.footernavigation.navigationType = Directory
page.theme.footernavigation.navigationValue = 11
page.theme.footernavigation.enable = 1

plugin.tx_news.view.templateRoothPath = EXT:kwm2023/Resources/Private/Templates/
